    if( _param_[ TRAIT_HEAVY_HANDED ] != 0 )
	{
        _param_[ ST_MELEE_DAMAGE ] += (_param_[ ST_STRENGTH ] * HEAVY_HANDED_MELEE_DAMAGE_BONUS );
