    for( uint i = 0; i < len; i++ )
    {
        Location@ loc = locations[ i ];
        if( loc is null )
            continue;

        if( loc.Visible )
        {
            loc.Visible = false;
            Log( "Скрыта локация " + loc.Id );
        }

        loc.GeckVisible = false;

        for( uint k = 0; k < crLen; k++ )
        {
            if( crs[ k ].UnsetKnownLoc( true, loc.Id ) )
                Log( "Стерта для " + crs[ k ].Id );
        }
    }
}

