					DeleteItem( targetItem );
					success = true;
				}
				
				@targetItem = map.GetItem( cr.HexX, cr.HexY, PID_REV_BALL1 );
				if(!valid(targetItem))
					@targetItem = map.GetItem( cr.HexX, cr.HexY, PID_REV_BALL2 );
				if(valid(targetItem)) {
					_SubItem( targetItem, 1 );
					success = true;
