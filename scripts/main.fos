		Critter@ target = useOnSelf ? @cr : @targetCr;
		if( valid( target ) )
		{
			Cleaning( target, 0 );
			return true;
		}
	}
		
	if( valid( targetItem) && SetTrapOnItem( cr, item, targetItem ) )
		return true;
	
    if( pid == PID_SHOVEL )
