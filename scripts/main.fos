	uint[] knifes = { PID_COMBAT_KNIFE, PID_LIL_JESUS_WEAPON, PID_KNIFE, PID_SWITCHBLADE, PID_WAKIZASHI_BLADE, PID_REVKNIFE1, PID_REVKNIFE2 };
	
