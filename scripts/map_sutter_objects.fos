}

bool _WaterPumpSkill( Item& item, Critter& cr, int skill )
{
    switch( skill )
	{
		case( SKILL_PICK_ON_GROUND ): WaterpumpMenu( cr, item ); break;
		case( SK_SCIENCE ): waterpumpInfo( cr, item ); break;
		case( SK_REPAIR ): check_repair( item, cr ); break;
	}

	return true;
}

bool collectWater( Item& item, Critter& cr, Item@ bottle )
{
	if( !valid( bottle ) )
	{
		@bottle = _CritGetItemHand( cr );
		if( !valid( bottle ) ) 
			return testInfo( cr, "Возьмите предмет в руки!" );
	}

	int8 index = bottlePid.find( bottle.GetProtoId() );

    if( index == -1 )
	{
		check_parts( item, cr, bottle );
		return true;
	}

	if( item.Val3 < 1 )
	{
		cr.Say( SAY_NETMSG, "Воды больше нет." );
		return true;
	}
	
	if( item.Val2 < 1 )
	{
		cr.Say( SAY_NETMSG, "Помпа отключена. Включите ее сначала." );
		return true;
	}
	
	if( getPowerValue(cr) <= 0 )
	{
		cr.Say( SAY_NETMSG, "Энергия отключена. Включите генератор." );
		return true;
	}
	
	_SubItem( bottle, 1 );
	cr.AddItem( bottleFull[index], 1 );
	cr.Say( SAY_EMOTE, "набирает воду" );
	item.Val3--; 
	
	return true;
}

bool _WaterPumpOnMe( Item& item, Critter& cr, Item@ usedItem )
{
	collectWater( item, cr, usedItem );
	return true;
}

