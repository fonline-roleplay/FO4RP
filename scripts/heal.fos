void answer_DOCTOR_TO_FIRSTAID( Critter& player, uint answerI, string& answerS )
{
    Critter@ targetCr = GetCritter( player.Stat[ ST_VAR0 ] );
    if( targetCr is null )
        return;
    if( answerI == 0 )
    {
		ProccessFirstAidSkill( player, targetCr, true);
    }
    if( answerI == 1 )
    {
		Critter@ target = valid(targetCr) ? @targetCr : @player;
		if( valid( target ) )
		{
			Item@ water = player.GetItem( PID_BOTTLE_FULL, -1 );
			if( !valid(water) )
				@water = player.GetItem( PID_GLASS_BOTTLE_FULL, -1 );
			
			Item@ soap =  player.GetItem( PID_itsoap01, -1 );
			if( !valid(soap) )
				@soap = player.GetItem( PID_FPSHL6, -1 );
				
			int pid = valid(soap) ? soap.GetProtoId() : 0;
			
			if( !valid(water) )
			{
				player.Say( SAY_NETMSG, "Вам нужна чистая вода для этого." );
				return;
			}

			if( pid == PID_itsoap01 )
			{
				target.Say( SAY_EMOTE_ON_HEAD, "Моется хозяйственным мылом" );
				target.ParamBase[ CR_DIRTINESS ] = ( target.ParamBase[ CR_DIRTINESS ] * 0.8 ) - 5;
			}
			else if( pid == PID_FPSHL6 )
			{
				target.Say( SAY_EMOTE_ON_HEAD, "Моется душистым мылом" );
				target.ParamBase[ CR_DIRTINESS ] = ( target.ParamBase[ CR_DIRTINESS ] * 0.6 ) - 10;
				
				if( target.ParamBase[ CR_DIRTINESS ] <= 0 )
					target.AddTimeEvent( "cte_aroma", REAL_SECOND(15), CTE_ROTTEN, 0 );
			} 
			else if( pid == 0 )
			{
				target.Say( SAY_EMOTE_ON_HEAD, "Моется" );//"Промывает раны водой" );				
				target.ParamBase[ CR_DIRTINESS ] -= Random( 0, target.ParamBase[ CR_DIRTINESS ] / 5 );
			}
			
			if( water.GetProtoId() == PID_BOTTLE_FULL )
				player.AddItem (PID_BOTTLE_EMPTY, 1);
			else
				player.AddItem (PID_BOTTLE_GLASS, 1);

			_SubItem( water, 1 );
			if( pid !=0 && Random( 0, 100 ) < 10 )
				_SubItem( soap, 1 );

			int chance = player.StatBase[ ST_AGILITY ] + player.StatBase[ ST_LUCK ];
			if( pid !=0 && Random( 0, 100 ) > Random( chance, chance * 10 ) - 1 )
			{
				player.Say( SAY_EMOTE, "Роняет мыло" );
				MoveItem( soap, 1, player.GetMap(), player.HexX + Random( -1, 1 ), player.HexY + Random( -1, 1 ) );
			}
			
			answer_SelectAction( target, 0, "" );
		}
	}
}

