	{
        Map@ map = GetMap( map_id );
		if( !valid( map ) )
		{
            return false;
        }
		
		Item@ remote = GetItem( remote_id );
		if( !valid( remote ) )
		{
            return false;
        }
		
		Item@ collar = GetItem( collar_id );
		if( valid( collar ) && collar.KEY_BONDAGE_ID == int( remote.Id ) )
		{
			Critter@ slave = GetCritter( uint( collar.BOND_SLAVE_ID ) );
