        DrawTab( msg, color );
    }

    if( thrist <= 90 )
    {
        string msg = "Жажда";
        /*
           if(thrist > 50 && thrist <= 90){
                msg = "Жажда";
           }else if(thrist > 30 && thrist <= 50){
                msg = "Сильная Жажда";
           }else if(thrist > 10 && thrist <= 30){
                msg = "Обезвоживаение";
           }else if(thrist <= 10){
                msg = "Сил.Обезвоживаение";
           }
         */
