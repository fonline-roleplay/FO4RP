        DrawTab( msg, color );
    }

    if( dyspnea <= 90 )
    {
        string msg = "Удушье";
        /*
           if(dyspnea > 50 && dyspnea <= 75){
                msg = "Нехватка Воздуха";
           }else if(dyspnea > 30 && dyspnea <= 50){
                msg = "Сильная Нехватка";
           }else if(dyspnea > 10 && dyspnea <= 30){
                msg = "Удушье";
           }else if(dyspnea <= 10){
