	}
	return null;
}

void SoundAmbientTick()
{
	if( GetTick() > NextAmbientTick )
	{
        if(GUI_GetActiveMainScreen() == CLIENT_MAIN_SCREEN_GAME)
		    PlayAmbientSound();
		NextAmbientTick = GetTick() + Random( AMBIENT_SOUND_DELAY / 2, AMBIENT_SOUND_DELAY );
	}

    if( GetTick() > NextBackgroundTick )
	{
        if(GUI_GetActiveMainScreen() == CLIENT_MAIN_SCREEN_GAME)
		    PlayBackgroudSound();
	}
}

