			}
			cr.Say( SAY_NETMSG, "You have changed the tanker energy level." );
			isTanker = true;
			break;
		}
	}
	time = ( time == ENERGY_REGULAR ? ENERGY_SUSPENDED : ENERGY_REGULAR );
	
	if( isTanker )
	{
		for( uint i = 0; i < count; i++ )
		{
			if( ignored_map_pids.find( maps[i].GetProtoId() ) != -1 )
			{
				maps[i].SetTime( ENERGY_REGULAR ); 
			}
			else
			{
				maps[i].SetTime( time );
			}
		}
	}
	else
	{
		map.SetTime( time );
	}
	
	string mode = ( time == ENERGY_REGULAR ? "standard" : "energy saving" );
	string action = ( time == ENERGY_REGULAR ? "saving !" : "enough !" );
	string[] data = { "test@answer_SwitchTankerEnergy", "At the moment there is a " + mode + " mode set on the " + ( isTanker ? "tanker" : "map" ) , action };
	DIALOG_MENU( cr, data);
}

