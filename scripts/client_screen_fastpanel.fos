        {
            Instance.Desc = text;

        }
        Options.Text( text, FONT_FALLOUT, COLOR_GREEN, COLOR_GREEN, FT_CENTERX | FT_CENTERY );
    }

    void SetText( uint16 channel )
    {
        Options.Text( "", FONT_FALLOUT, COLOR_GREEN, COLOR_GREEN, FT_CENTERX | FT_CENTERY );
    }
}

