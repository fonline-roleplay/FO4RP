        @Options = GUI_GetElementOptions();
    }

    void OnKeyPress( uint8 key, uint8 letter )
    {
        string@ text = Options.GetText();
        // string@ text2 = ""+key;
        if( text.length() > 0 && text[ text.length() - 1 ] == '\n' )
            text.resize( text.length() - 1 );
