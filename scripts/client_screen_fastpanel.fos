        GetPic( Button );
        ::HideScreen( CLIENT_SCREEN_FASTPANEL_TEXTBOX, 0, 0, 0 );

        // RunServerScriptUnsafe("general_unsafe@unsafe_send_fastpanel", 1, 0, 0, "", null);
//              GetFastButtons();
