uint GetColor( uint8 sayType )
{
    uint color = 0;
    switch( sayType )
    {
    case 1:
        color = COLOR_SAND;
        break;
    case 2:
        color = COLOR_LRED;
        break;
    case 3:
        color = COLOR_LGREEN;
        break;
    case 4:
        color = COLOR_LBLUE;
        break;
    case 5:
        color = COLOR_LGRAY;
        break;
    default:
        color = COLOR_SAND;
        break;
    }
    return color;
}

uint LoadPanelTempFile( bool type )
{
    file   f;
    string word = "", word2 = "";
    uint   pos = 0;
    // cr.Say(SAY_NETMSG, "start sendin");
    if( f.open( FILE_NAME, "r" ) == 0 )
    {
        // cr.Say(SAY_NETMSG, "file open successful");
        f.setPos( 0 );
        while( !f.isEndOfFile() )      // || count > length))
        {
            pos = f.getPos();
            f.readLine( word );
            word2 += word;
//				cr.Say(SAY_NETMSG, word);
