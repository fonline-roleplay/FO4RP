class ArcFurnace : MenuFurnace
{
	ArcFurnace( Item& furnace, Map& map, int fur_type ) 
	{
		furnace_id = furnace.Id;
		map_id = map.Id;
		furnace_type = FURNACE_ENERGY_TYPE;
		
    }
	
	void menu_EnableFurnace( Item& furnace, Map& map, Critter& cr, iDialogBox& menu  )
	{
		if ( furnace.STATE == STATE_EXTINGUISHED && menu.ButtonMsg( STR_DEVICE_ACTIVATE ) )
		{
			PlayGenericSound( map, cr.HexX, cr.HexY, "BUTIN1.mp3", 5 );
			if ( CheckGeneratorOnMap( map_id ) )
			{
				enableFurnace( furnace );
			}
			else
			{
				cr.SayMsg( SAY_NETMSG, TEXTMSG_TEXT, STR_POWER_IS_OFF );
			}
		}
	}
	
	void menu_DisableFurnace( Item& furnace, Map& map, Critter& cr, iDialogBox& menu)
	{
		if ( furnace.STATE == STATE_BURNING && menu.ButtonMsg( STR_DEVICE_DEACTIVATE ) )
		{
			PlayGenericSound( map, cr.HexX, cr.HexY, "BUTIN1.mp3", 5 );
			disableFurnace( furnace);
		}
	}
	
	
