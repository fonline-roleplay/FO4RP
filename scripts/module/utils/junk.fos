shared string smart_two_digits( uint16 value, string delimiter = ":", bool LONG = false )
{
	if( value == 0 )
		return LONG ? "00" + delimiter : "";
	
	if( value > 9 )
		return value + delimiter;
	else
		return "0" + value + delimiter;
}

