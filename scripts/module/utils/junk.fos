shared string@[] splitExSpaces( string source )
{
	bool reading = false;
	string@[] result;
	
	uint i = 0, l = source.length(), len = 0;
	for( ; i < l; i++ )
	{
		if( source[i] == ' ' || source[i] == '\t' )
		{
			if( reading )
			{
				result.insertLast( substring( source, i - len, len ) );
				reading = false;
				len = 0;
			}
			continue;
		}
		
		len++;
		if( !reading )
		{
			reading = true;
			len = 1;
		}
	}
	
	if( reading )
		result.insertLast( substring( source, i - len, len ) );
	
	return result;
}

