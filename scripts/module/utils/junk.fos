bool CopyArray( string@[]@ source, string[]& target )
{
	if( !valid( source ) )
	{
		return false;
	}

	uint len = source.length();
	
	uint skipped = 0;
	for( uint i = 0; i < len; i++ )
	{
		if( !valid( source[i] ) )
		{
			skipped++;
			continue;
		}
		
		target.insertLast( source[i] );
	}
		
	return skipped < len;
}

