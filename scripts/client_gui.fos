            Ex = i - current_group * 10 + 10;
        }
		
        if( Ex != 0 )
        {
            if( i != 9 )
			{
                controlled[ i ] = controlled[ i + 1 ];
            }
			else 
			{
                controlled[ i ] = 0;
			}
		}
    }
	
