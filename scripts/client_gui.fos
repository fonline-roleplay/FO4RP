    void selectAll()
    {
    	CritterCl@ chosen = GetChosen();
    	if ( !valid( chosen ) ) 
		{ 
			return;
		}
    	CritterCl@[] crs;

    	GetCritters( 0, FIND_LIFE_AND_KO|FIND_ALL, crs );

		uint len = crs.length();
    	for( uint i = 0; i < len; i++ ) {
    		if( !valid( crs[i] ) || crs[i].IsDead() ) {
				continue;
			}
			
			if( crs[i].IsNpc() ) {
				if(  crs[i].ParamBase[ST_FOLLOW_CRIT] != int( chosen.Id ) ) {
