	}

    bool isSelected(uint16 hx, uint16 hy)
    {
		int x=0, y=0;
		GetHexPos(hx, hy, x, y);

		int top = y1 < y2 ? y1 : y2; //MIN(y1,y2);
		int left = x1 < x2 ? x1 : x2; //MIN(x1,x2);
		int bottom = y1 > y2 ? y1 : y2;//MAX(y1,y2);
		int right = x1 > x2 ? x1 : x2;//MAX(x1,x2);

		if (x < left || x > right) {
			return false;
		}
		
		if (y < top || y > bottom) {
			return false;
		}
