                return true;

            }
			
			//Item throw.
            if( key == DIK_J && !__ConsoleActive && !KeyPressed[ DIK_LCONTROL ] && !KeyPressed[ DIK_LSHIFT ] )
			{
				CritterCl @ choo = GetChosen();
