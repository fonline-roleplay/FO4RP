				return false;
			}			
		}

		if( screen_type == 11 || screen_type == 10 )
		{
			if( KeyPressed[ DIK_LSHIFT ] && key == DIK_Q )
			{
				RunServerScriptUnsafe( "gm@unsafe_show_containments", 0, 0, 0, null, null );
				return false;
