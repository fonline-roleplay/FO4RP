uint getHash( uint id, uint8 version )
{
    if( version == 0 || id == 0 )
	{
        return 0;
	}
	
    if( version == 2 )
    {
        uint temp = id + 23548;
        temp = temp * temp * temp;

        return temp;
    }
    else
	{
        return 0;
	}
}

class CritterName
{
    uint   Id;
    string Name;
    uint   Hash;

    CritterName()
    {
        Id = 0;
        Name = "???";
        Hash = 0;
    }

    CritterName( uint id, string & name )
    {
        Id = id;
        Name = name;
        Hash = getHash( Id, VERSION_HASH );
    }

    CritterName( string & name, uint hash )
    {
        Id = 0;
        Name = name;
        Hash = hash;
    }

    CritterName( uint id, string & name, uint hash )
    {
        Id = id;
        Name = name;
        if( hash == 0 )
		{
            Hash = getHash( Id, VERSION_HASH );
        }
		else
		{
            Hash = hash;
		}
	}
}

