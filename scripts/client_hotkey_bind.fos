#ifndef CLIENT_HOTKEY_BIND
#define CLIENT_HOTKEY_BIND

#include "_utils.fos"
#include "client_hotkey_manager.fosh"

void TestOnKeyStateCallback(int state)
{
	if(state == KEY_PRESS)
	{
		Message("Pressed");
	}
	else if(state == KEY_HOLD)
	{
		Message("Being hold");
	}
	else if(state == KEY_RELEASE)
	{
		Message("Released");
	}
}

void HotkeysInit()
{
	uint8[] newHotkey = {DIK_LSHIFT, DIK_I};
	HotkeyMngr_AddHotkey("Test", newHotkey, TestOnKeyStateCallback);
}

#endif // CLIENT_HOTKEY_BIND