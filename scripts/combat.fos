int FindCritterInArray( Critter@[]& crits, Critter& cr )
{
    uint crId = cr.Id;
    for( uint i = 0, j = crits.length(); i < j; i++ )
        if( crits[ i ].Id == crId )
            return i;
    return -1;
}

