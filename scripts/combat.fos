        target.ModeBase[ MODE_NO_WALK ] = 0;
        target.ModeBase[ MODE_NO_RUN ] = 0;
        target.ToKnockout( KNOCKOUT_ANIM2_DEFAULT( ( Random( 0, 1 ) == 1 ) ), 2, target.HexX, target.HexY );
    }     // выбивание груза из цели
    if( valid( realWeapon ) && realWeapon.Val5 == 10 )
    {
