			totalDmg -= totalDmg * 0.25;
        }

        if( attack.Attacker.Perk[ PE_LIVING_ANATOMY ] != 0 && !( bt == BT_ALIEN || bt == BT_ROBOT ) )
            totalDmg += 5;
       
