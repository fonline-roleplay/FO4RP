	if( valid( attack.Ammo ) && ( !target.IsDead() || !target.IsKnockout() ) && ( aim == HIT_LOCATION_LEFT_ARM || aim == HIT_LOCATION_RIGHT_ARM ) && (valid (_CritGetItemHand(target))) && _CritGetItemHand(target).GetProtoId() == PID_FLAMER) //Эффект
		{
		if( Random( 0, 1 ) == 0 )
