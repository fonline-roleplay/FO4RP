				ChangeStatus( target, CR_STATUS_HEAVY_DMG, 0, true );
			if( attack.Attacker.GetProtoId() == 128 && targetIsPlayer ) // Modoc guards
            {
				if( target.Param[ QST_GAMEMODE ] == GAME_ARCADE )
				   totalDmg += 40;
