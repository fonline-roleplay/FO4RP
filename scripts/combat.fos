				Log_Killings( attack.Attacker, attack.Attacker.Id, 0, 0, null, null );
			}
			else
			{
				attack.Attacker.Say( SAY_EMOTE, "Еле сдерживается, чтобы не прострелить себе голову"); 
			}
		}
		bool canBleed = true;
		
