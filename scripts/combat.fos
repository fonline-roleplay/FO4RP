                    }
                    else
                    {
                        aim = HIT_LOCATION_RIGHT_ARM;
                    }
                }
            }
        }

        // attacking running target
        if( valid(target) && target.IsBusy() )
        {
            if( ( cr.Dir + 3 ) % 6 == target.Dir )
                toHit += 20;
