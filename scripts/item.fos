        {
            door.LockerOpen();
        }
    }
    else
    {
        if( valid( cr ) && cr.IsPlayer() && cr.StatBase[ ST_BODY_TYPE ] < BT_BRAHMIN && map.GetData(24)>0 )
        {
            uint16 x = 0;
            uint16 y = 0;
            @ map = door.GetMapPosition( x, y );
