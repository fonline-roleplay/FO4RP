	uint8 countTimes4 = cr.GetTimeEvents( CTE_PSI_SHIELD, null, null, rates );
	if( cr.Stat[ P_PSI_LIMIT ] >= 80 && countTimes3 <= 0 )
	{
		cr.Say( SAY_NETMSG, "Дикая головная боль охватила вас, тело трясется, из носа потекла кровь." );
