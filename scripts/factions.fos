        {
            for( uint i = 0; i < Satter_fort.length(); i++ )
            {
                if( Satter_fort[ i ] == cr.Id )
                    Satter_fort.removeAt( i );
            }
        }
    }
    else if( faction == 6 )
    {
        if( join )
            Satter_raiders.insertLast( cr.Id );
        else
        {
            for( uint i = 0; i < Satter_raiders.length(); i++ )
            {
                if( Satter_raiders[ i ] == cr.Id )
                    Satter_raiders.removeAt( i );
            }
        }
    }
}
