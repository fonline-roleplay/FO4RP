            {
                if( Modoc_criminal[ i ] == cr.Id )
                    Modoc_criminal.removeAt( i );
            }
        }
    }
    else if( faction == 4 )
    {
        if( join )
            Junk_mutants.insertLast( cr.Id );
        else
        {
            for( uint i = 0; i < Junk_mutants.length(); i++ )
            {
                if( Junk_mutants[ i ] == cr.Id )
                    Junk_mutants.removeAt( i );
            }
        }
    }
    else if( faction == 5 )
    {
        if( join )
            Satter_fort.insertLast( cr.Id );
