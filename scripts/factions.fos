}

bool FactionInGame( Critter& player, Critter@ npc, int faction, int number )
{
    switch( faction )
    {
    case 0:
        break;
    case 1:
        if( Modoc_citizens.length() >= number )
            return true;
        break;
    case 2:
        if( Modoc_police.length() >= number )
            return true;
        break;
    case 3:
        if( Modoc_criminal.length() >= number )
            return true;
        break;
    case 4:
        if( Junk_mutants.length() >= number )
            return true;
        break;
    case 5:
        if( Satter_fort.length() >= number )
            return true;
        break;
    case 6:
        if( Satter_raiders.length() >= number )
            return true;
        break;
    }
    return false;
}

