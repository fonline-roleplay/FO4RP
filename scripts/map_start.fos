void StartMenuArena( Critter& cr )
{
    Map@ map = cr.GetMap();
    if( map is null )
	{
        return;
    }

    iMenuHandler@ handler = MenuArena( map );
    iDialogBox@ menu = OpenMenu( cr, "arena_terminal", handler );
}

class MenuArena: CenteredMenuHandler
{
    uint map_id;
	
    MenuArena( Map& map )
	{
        map_id = map.Id;
    }

    bool MenuUpdate( Critter& cr, iDialogBox& menu )
	{
        Map@ map = GetMap( map_id );
		Location@ loc = GetLocationByPid( LOCATION_TLJ_arena, 0 );
		Map@ tmap0 = null;
		Map@ tmap1 = null;
		Map@ telemap = null;
		if( valid( loc ) )
		{
			@tmap0 = loc.GetMapByIndex( 0 );
			@tmap1 = loc.GetMapByIndex( 1 );
		}
		
		if( valid( tmap0 ) )
		{
			uint playersCount = CountMapPlayers( tmap0 );
			string info = " Players: [ " + playersCount + " ]";
			if( menu.ButtonExt( "Arena1", info ) )
			{
				@telemap = tmap0;
				TryTeleport( cr, telemap );
				return false;
			}
		}
		
		if( valid( tmap1 ) )
		{
			uint playersCount = CountMapPlayers( tmap1 );
			string info = " Players: [ " + playersCount + " ]";
			if( menu.ButtonExt( "Arena2", info ) )
			{
				@telemap = tmap1;
				TryTeleport( cr, telemap );
				return false;
			}
		}
		return true;
	}
	
    string@ Description( Critter& player )
	{
		string info = "Arena Alpha Gameplay. \n\nSelect arena for teleportation. This action is irreversable. \n\n You will be given max level!";
		
		return info;
    }
	
    string@ ButtonCancel()
	{
        return ButtonDecorator( "Hide menu", null );
    }
}

bool TryTeleport( Critter& cr, Map& map )
{
	cr.ParamBase[ QST_GAMEMODE ] = GAME_SURVIVAL;
	int entires = map.CountEntire( ARENA_PLAYER_SPAWN );
	if( entires <= 0 )
	{
		return false;
	}

	uint16 hx = 0, hy = 0;
	map.GetEntireCoords( ARENA_PLAYER_SPAWN, Random( 0, entires - 1 ), hx, hy );
	cr.TransitToMap( map.Id, hx, hy, 0 );

	return true;
}

