    cr.StatBase[ ST_ELECTRO_ABSORB ] = 0;
    cr.StatBase[ ST_EXPLODE_ABSORB ] = 0;
    cr.ChangeCrType( result );
// //////////////////////////////////////////////Присвоение статов и бодитайпа//////////////////////////////////////////////////////////////////////////
