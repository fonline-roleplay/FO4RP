	if( player.IsPlayer() ) //НПЦ не спят.
	{
		player.ParamBase[ CR_RELAXED ]++;
		if( player.ParamBase[ CR_SLEEPING_STATE ] != 3 && player.ParamBase[ CR_RELAXED ] > 60 && player.ParamBase[ CR_VAL8 ] == 0 )
		{
			player.ParamBase[ CR_VAL8 ] = 1;
