//import void SayLog( Map@ map, string@ message ) from "general_unsafe";
void SayLog( Map@ map, string@ message ) //exported
{
	if( !valid( message ) ) { Log( "!valid message" ); return; }

    file f;
    if( f.open( "logs\\saylog.txt", "a" ) >= 0 )
    {
		string@ map_name = !valid(map) ? "Глобал" : GetGmMsgStr( ( map.GetProtoId() + 1 ) * 10 + 8 );
		if( !valid( map_name ) )
			@map_name = "[ Карта #" + map.Id + " PID " + map.GetProtoId() + " ]";
	
        f.writeString( FixedSize( __Year + "." + RealDay() + " " + RealTime() + " = " + MakeTime( __FullSecond ) + map_name + ":", 50 ) + message + "\n" );
        f.close();
    }
    // else
        // Log( "can't open log file!" );	//Логгирование части эмоутов, разговоров и прочего
}

